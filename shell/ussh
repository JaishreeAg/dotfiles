ussh() {
  unset -f ussh
  if which ussh > /dev/null ; then
    export GIT_SSH_COMMAND="$(which ussh) --"
    alias ssh="$(which ussh)"
  fi
}

unssh() {
  unset GIT_SSH_COMMAND
  unalias ssh
}

if [ -f "$HOME/.noussh" ]; then
  # all is good
else
  # Only enable this by default on weekdays
  if [[ $(date +%u) -lt 5 ]]; then
    ussh
  fi
fi
