#
# Helper functions
#

# Alias $1 to $2 if $2 is a thing
_aliasto () {
  if [ $# -ne 2 ] ; then
    echo "Usage: $0 <from> <to>"
    return
  fi

  if [ -x "$1" ] || which "$1" > /dev/null ; then
    alias "$2"="$1"
  fi
}

#
# Aliases
#

alias ':q'='echo "\033[31mThis is zsh, not vim\033[0m"'
alias clip='nc localhost 8377'
alias ll='ls -l'
alias ltr='ls -ltr'
alias r='git refresh'
alias rm > /dev/null && unalias rm
alias s='ssh-reagent'
alias t='tmux -u'
alias e='emacsclient -t'
alias e.='e .'
alias e,='e .'

# TODO put this in the linux dir
if [[ "$(uname)" == "Linux" ]] ; then
  alias ls='ls --color=always'
  alias ts='sudo tail -f /var/log/syslog'
fi
alias grep='grep --color=always'

_aliasto nvim vim
_aliasto rg ag
alias e=nvim
alias vi="$(which vim)"

#
# Git aliases
#

if [ -x /usr/local/bin/git ]; then
  alias git='nocorrect /usr/local/bin/git'
fi
alias g='nocorrect git'
alias gp='git add -p'
alias gr='git rebase'
alias gco='git checkout'
alias gca='git commit --amend'
alias gcaf='git commit --amend --no-verify'
alias gcn='git commit --amend --no-verify --no-edit'
alias gst='git status -sb'

# mercurial stuff

alias hst='hg status'

alias pep='autopep8 -i '

#
# Global aliases
#
alias -g G=' | grep '

alias land='OVERCOMMIT_DISABLE=1 arc land'

if which go > /dev/null ; then
  alias go='nocorrect go'
  alias gotest='go test $(go list ./... | grep -v "/vendor/")'
fi

if [ -x "$(which ccat)" ]; then
  alias cat='ccat --bg=dark'
fi

unset -f _aliasto
