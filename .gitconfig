[core]
	whitespace = trailing-space,space-before-tab
	editor = nvim
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=1,5 -RFX

[user]
	name = Aiden Scandella
	email = git@sca.ndella.com
	signingkey = C19FAEAAFD6CC39783DAEB6617C559C421D83A19

[push]
	default = upstream

[diff]
	renames = copies
	mnemonicprefix = true

[branch]
	autosetuprebase = always

[branch "master"]
	grebase = true

[alias]
	gadd-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	gamend = commit --amend
	gbranchname = "!git rev-parse --abbrev-ref HEAD | nc localhost 8377"
	gca = commit --amend
	gcached = diff --cached
	gedit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f` +Gdiff"
	gdelmerged = "!git branch --merged | grep -v "\\*" | grep -v "^master" | xargs -n 1 git branch -d"
	gdelsquash = "!git fetch -p && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -n 1 git branch -D"
	gresquash = "!git checkout master && git fetch && OVERCOMMIT_DISABLE=1 git rebase origin/master && git delsquash"
	ggraph = log --oneline --graph
	gir = !git rebase -i origin/master
	gl = log --decorate --stat
	glg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	glol = log --oneline --decorate
	gpatch = add -p
	grefresh = !ssh-add -l && STASH=$(git stash) && git fetch && OVERCOMMIT_DISABLE=1 git rebase origin/master && test \"$STASH\" != \"No local changes to save\" && git stash pop || true
	grmb = !sh -c 'git branch -D $1 && git push origin :$1' -
	gsha1 = rev-parse HEAD
	gsha = !git rev-parse HEAD | cut -c 1-8
	gshowstash = stash show -p stash@{0}
	gten = log --oneline -n 10
	gup = !git fetch origin && git rebase origin/master
	gupstream = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
	gwho = shortlog -n -s --no-merges
	gfiles = show --pretty=format: --name-only
	gthirty = log --oneline -n 30
	gp = add -p
	gunstage = reset HEAD

[color]
	gui = true

[log]
	gdecorate = short

[rerere]
	enabled = true

[rebase]
	autosquash = true

[pager]
	status = true
	show-branch = true
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX

[help]
	autocorrect = 5

[url "ssh://gitolite@code.uber.internal/"]
	insteadOf = git://code.uber.internal/
[url "ssh://git@github.com/uber-go/"]
	insteadOf = https://github.com/uber-go/
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[http]
	cookiefile = ~/.gitcookies

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow bold
[commit]
	gpgsign = true
[gpg]
	program = gpg2
[url "ssh://gitolite@code.uber.internal:2222/"]
	insteadOf = https://code.uber.internal/
[url "ssh://code.uber.internal/"]
	insteadOf = https://code.uber.internal/
[url "ssh://config.uber.internal/"]
	insteadOf = https://config.uber.internal/
[http "https://gopkg.in"]
	followRedirects = true
[http "https://gopkg.uberinternal.com"]
	followRedirects = true
